RewriteEngine On

# Перенаправление с www на без www
RewriteCond %{HTTP_HOST} ^www\.ggpoint\.store [NC]
RewriteRule ^(.*)$ https://ggpoint.store/$1 [L,R=301]

# HTTPS редирект
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [L,R=301]

# Убираем .html из URL
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.html -f
RewriteRule ^(.*)$ $1.html [L]

# Красивые URL для категорий
RewriteRule ^кейкапы/?$ keycaps.html [L,NC]
RewriteRule ^коврики/?$ mats.html [L,NC]
RewriteRule ^админ/?$ admin.html [L,NC]
RewriteRule ^admin/?$ admin.html [L,NC]

# Защита админ-панели (базовая)
RewriteRule ^admin\.html$ - [F]

# 404 ошибка
ErrorDocument 404 /index.html
